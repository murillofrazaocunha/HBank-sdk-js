{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "declaration": true, // Gera arquivos .d.ts
    "sourceMap": true // Gera source maps para debugging
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}